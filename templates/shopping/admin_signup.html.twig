<!DOCTYPE html>
  <head>
    <meta http-equiv="content-type" content="text/html; charset=utf-8" />
    
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css">

    <link href="{{constant('shopping\\Bootstrap::APP_URL')}}css/admin_header.css" rel="stylesheet" type="text/css" />
    <link href="{{constant('shopping\\Bootstrap::APP_URL')}}css/admin_sidebar.css" rel="stylesheet" type="text/css" />
    <link href="{{constant('shopping\\Bootstrap::APP_URL')}}css/detail_list.css" rel="stylesheet" type="text/css" />

    <script src="{{constant('shopping\\Bootstrap::APP_URL')}}js/logout.js"></script>
    <title>新規登録管理者リスト</title>
    <style>
      td.logged_in {
        font-weight: bold;
        font-size: 17px;
      } 
    </style>
  </head>
  <body>
    {% include 'admin_header.html.twig' %}
    
    <section class="my-5">
      <div class="container">
        <div class="row oreder-detail-f">

        {% include 'admin_sidebar.html.twig' %}
          
            <div class="col-9">    
              <h3 class="order-history">新規登録</h3> 
                <form action="csv/signup_csv.php" method="get">
                  <span class="csv"><a href="csv/signup_csv.php" class="btn btn-success mb-3">CSV出力</a></span>
                </form>

                <div class="table-responsive">
                  <table class="table table-striped table-hover table-line">
                    <thead class="table-secondary">
                      <tr>
                        <th>ID</th>
                        <th>苗字</th>
                        <th>名前</th>
                        <th>苗字(カナ)</th>
                        <th>名前(カナ)</th>
                        <th>性別</th>
                        <th>生年月日</th>
                        <th>郵便番号</th>
                        <th>住所</th>
                        <th>メールアドレス</th>
                        <th>電話番号</th>
                        <th>編集</th>
                        <th>削除</th>
                        <th>ユーザー</th>
                      </tr>
                    </thead>
                    <tbody>
                      {% for signup in adminSignup %}
                  
                      <tr>
                        <td>{{ signup.user_id }}</td>
                        <td>{{ signup.family_name }}</td>
                        <td>{{ signup.first_name }}</td>
                        <td>{{ signup.family_name_kana }}</td>
                        <td>{{ signup.first_name_kana }}</td>
                        <td>{{ signup.sex }}</td>
                        <td>{{ signup.year }}年{{ signup.month }}月{{ signup.day }}</td>
                        <td>{{ signup.zip1 }}-{{ signup.zip2 }}</td>
                        <td>{{ signup.address }}</td>
                        <td>{{ signup.email }}</td>
                        <td>{{ signup.tel1 }}-{{ signup.tel2 }}-{{ signup.tel3 }}</td>
                        <td><button class="btn btn-edit" data-bs-toggle="modal" data-bs-target="#editUserModal{{ order.order_id }}">編集</button></td>
                        <td class="delete"><a href="{{constant('shopping\\Bootstrap::ENTRY_URL')}}admin/admin_signup.php?user_id={{ signup.user_id }}">削除</a>
                        </td>
                 
                        <td class="{{ signup.is_logged_in ? 'logged_in' : 'logged_out' }}">{{ signup.is_logged_in ? 'ログイン' : 'ログアウト' }}</td>
                      </tr>
                    {% endfor %}
                  </tbody>
                </table>
              </div> 
            </div>
        </div>
      </div>
    </body>
  </html>  